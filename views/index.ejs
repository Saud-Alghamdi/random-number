<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1">
    <!-- Import Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Import my style -->
    <link rel="stylesheet" href="style.css">
    <title>Math.random</title>
</head>
<body>

    <div id="loader-container" class="visually-hidden">
        <div id="loader"></div>
    </div>

    <!-- ---------------------------------------------------------------------------- -->
    
    <div class="container d-grid gap-3 mt-2 text-center">

        <div class="row" id="row1">
            <h1 class="col col-12">Random Number Generator</h1>
            <p class="mt-3">Fastest random number generator, in the most famous programming languages &#128525;</p>
        </div>

        <!-- ----------------------------------------------------------------------- -->

        <form action="/generate" method="post">

            <div class="row mt-3 mt-md-3 gap-4 d-flex justify-content-center align-items-end" id="row2">

                <div class="col col-12 col-md-5 col-lg-4 order-1" id="col1">
                    <h5>Programming Language:</h5>
                    <select name="language" class="mt-3">
                        <option value="JavaScript">JavaScript</option>
                        <option value="PHP">PHP</option>
                        <option value="Java">Java</option>
                        <option value="Python">Python</option>
                        <option value="C#">C#</option>
                        <option value="C++">C++</option>
                        <option value="Dart">Dart</option>
                        <option value="Ruby">Ruby</option>
                    </select>
                </div>
                
                <div class="col col-12 col-md-5 col-lg-4 order-3" id="col2">
                    <h5>Pick Two Numbers:</h5>
                    <input name="firstNumber" class="mt-3" type="number" id="num1" value=0>
                    <input name="secondNumber" class="mt-3 "type="number" id="num2" value=10>
                </div>

                <div class="col col-12 col-lg-2 order-3 order-lg-2">
                    <button id="generate-btn" class="col btn btn-success">Generate</button>
                </div>

            </div>
                
        </form>

        <!-- ----------------------------------------------------------------------- -->

        <div class="row" id="row3">
            <textarea id="script" name="script" spellcheck="false" class="col col-12 mx-auto border border-success border-3 mt-lg-3"><%= program.script %></textarea>
        </div>
        
            <div class="row d-flex align-items-center" id="row3">
            <div class="col col-12">
                <button id="run-btn" class="btn btn-primary mt-3">RUN</button>
            </div>
            <div id="output-div" class="mt-4 col col-10 mx-auto text-start border border-success border-3">
                <h6 id="output-text">output:</h6>
                <p class="mt-2"><%= output %></p>
            </div>
        </div>

    </div>

    <!-- -------------------------------------------------------------------------------- -->

</body>
<script src="script.js"></script>
</html>