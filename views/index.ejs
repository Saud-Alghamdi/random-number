<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1" />
    <!-- Import Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <!-- Import my style -->
    <link rel="stylesheet" href="style.css" />
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="favicon.ico?v=2" />
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico?v=2" />
    <!-- Import font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <!-- Meta description -->
    <meta name="description" content="Generate your random number code with popular programming languages." />
    <!-- Meta Keywords -->
    <meta name="keywords" content="HTML, CSS, JavaScript, Web Development, Math.random, Random Number, randint, PHP, Ruby, C++, C#, Java, Python, Dart, Node.js" />
    <!-- Title -->
    <title>Random Number Code Generator</title>
  </head>
  <body>
    <div id="wrapper">
      <!-- Loader -->
      <div id="loader-container" class="visually-hidden">
        <div id="loader"></div>
      </div>

      <!-- ---------------------------------------------------------------------------- -->

      <!-- Inputs and Generate button -->

      <div class="container d-grid gap-2 text-center">
        <div class="row mt-2" id="row1">
          <h1 id="header" class="col col-12">Random Number Code Generator</h1>
          <p id="subheader" class="mt-3">Generate your random number code with popular programming languages &#128525;</p>
        </div>

        <form action="/generate" method="post">
          <div class="row mt-4 gap-4 d-flex justify-content-center align-items-end" id="row2">
            <div class="col col-md-5 col-lg-4 order-1" id="col1">
              <h5 class="label">Programming Language:</h5>
              <select name="language" class="mt-2">
                <option value="JavaScript">JavaScript</option>
                <option value="PHP">PHP</option>
                <option value="Java">Java</option>
                <option value="Python">Python</option>
                <option value="C#">C#</option>
                <option value="C++">C++</option>
                <option value="Dart">Dart</option>
                <option value="Ruby">Ruby</option>
              </select>
            </div>

            <div class="col col-md-5 col-lg-4 order-3" id="col2">
              <h5 class="label">Pick Two Numbers:</h5>
              <input name="firstNumber" class="mt-2" type="number" id="num1" value="0" />
              <input name="secondNumber" class="mt-2" type="number" id="num2" value="10" />
            </div>

            <div class="col col-12 col-lg-2 order-3 order-lg-2 mt-2 mt-md-0">
              <button id="generate-btn" class="col btn btn-success">Generate & Run</button>
            </div>
          </div>
        </form>

        <!-- ------------------------------------------------------------------------------- -->

        <!-- Script, Run button and output -->

        <div class="row" id="row3">
          <textarea id="script-container" name="script" spellcheck="false" disabled="true" class="col col-12 mx-auto mt-2 mt-lg-4 py-2"><%= program.script %></textarea>
        </div>

        <div class="row d-flex align-items-center" id="row3">
          <div id="output-container" class="mt-2 col col-10 mx-auto text-start">
            <h6 id="output-text">output:</h6>
            <p id="output-msg" class="mt-1"><%= output %></p>
          </div>
        </div>
      </div>

      <!-- -------------------------------------------------------------------------------- -->

      <!-- Footer -->
      <footer class="d-flex align-items-center">
        <p id="developer" class="">Developed by: Saud Alghamdi</p>
        <a href="https://github.com/Saud-Alghamdi/random-number" title="Random Number GitHub Repository" id="github"><i class="fa-brands fa-github"></i> GitHub</a>
        <a href="https://twitter.com/Saudgh1997" title="Saud's Twitter Account" id="twitter"><i class="fa-brands fa-twitter"></i> Twitter</a>
      </footer>
    </div>
  </body>
  <script src="script.js"></script>
</html>
